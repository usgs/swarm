  <developers>
    <developer>
      <id>dcervelli</id>
      <name>Dan Cervelli</name>
      <properties>
        <active>false</active>
      </properties>
    </developer>
    <developer>
      <id>cervelli</id>
      <name>Peter Cervelli</name>
      <email>pcervelli@usgs.gov</email>
      <organization>U.S. Geological Survey, Volcano Science Center</organization>
